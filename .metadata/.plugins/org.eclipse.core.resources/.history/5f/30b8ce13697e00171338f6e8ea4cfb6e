package clientDemo;

import javax.swing.*;

public class LoginFrame extends JFrame {
	
	public LoginFrame() {
		super();
		this.setTitle("ChatSC login");
		this.setLayout(null);
		this.setSize(300, 200);
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		this.setLocationRelativeTo(null);
		
		JLabel label_title = new JLabel();
		label_title.setText("用户登录");
		label_title.setSize(200, 60);
		label_title.setLocation(40,40);
		add(label_title);
		
		JLabel label_user = new JLabel();
		label_user.setText("用户名");
		label_user.setSize(60, 30);
		label_user.setLocation(40, 110);
		add(label_user);
		
		JLabel label_psd = new JLabel();
		label_psd.setText("密码");
		label_psd.setSize(60, 30);
		label_psd.setLocation(40, 150);
		add(label_psd);
		
		JTextField userIn = new JTextField("请输入用户名");
		userIn.setSize(150, 30);
		userIn.setLocation(110, 110);
	}
	
}
